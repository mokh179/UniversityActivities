@page
@model UniversityActivities.Web.Areas.Student.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}
@{
    ViewData["Title"] = "Dashboard";
}
<link href="~/css/areas/student/student-filters.css" rel="stylesheet" />
<div class="vibe-header mb-4">
    <h2 class="fw-bold">Find Your Vibe</h2>
    <p class="text-muted">
        Discover local events perfectly matched to your interests
    </p>
</div>

<form method="get">

    <div class="filter-accordion" onclick="toggleSection('whenSection')">
        <div class="filter-title">
            <span> Filters</span>
            <span class="arrow">⌄</span>
        </div>
    </div>

    <div id="whenSection" class="filter-body d-none">
        <div class="row g-3">

            <!-- Date -->
            <div class="col-md-6">
                <label class="form-label small text-muted">
                    Select date
                </label>
                <input type="date"
                       name="SelectedDate"
                       class="form-control" />
            </div>

            <!-- Range -->
            <div class="col-md-6">
                <label class="form-label small text-muted">
                    Time range
                </label>
                <select name="DateRange"
                        class="form-select">
                    <option value="">Any time</option>
                    <option value="Today">Today</option>
                    <option value="Week">This week</option>
                    <option value="Month">This month</option>
                </select>
            </div>

        </div>
    </div>

    <!-- Apply -->
    <button type="submit" class="btn apply-filters-btn mt-4">
        🔍 Apply Filters
    </button>

</form>

<script>
    function toggleSection(id) {
        document.getElementById(id).classList.toggle("d-none");
    }
</script>
