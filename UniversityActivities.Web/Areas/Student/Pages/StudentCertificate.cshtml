@page
@model UniversityActivities.Web.Areas.Student.Pages.StudentCertificateModel

@{
    Layout = null; // علشان تبقى صفحة نظيفة للطباعة / PDF
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Attendance Certificate</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f7fb;
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
        }

        .certificate {
            background: #fff;
            border-radius: 16px;
            padding: 60px;
            max-width: 900px;
            margin: auto;
            border: 8px solid #2f7af8;
            text-align: center;
        }

        .certificate h1 {
            color: #2f7af8;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .certificate h3 {
            margin: 30px 0;
        }

        .certificate .name {
            font-size: 32px;
            font-weight: 700;
            color: #000;
            margin: 20px 0;
        }

        .certificate .activity {
            font-size: 20px;
            margin-top: 10px;
        }

        .certificate .footer {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
        }

        .signature {
            text-align: center;
        }

        .signature span {
            display: block;
            margin-top: 10px;
            font-weight: 600;
        }
    </style>
</head>

<body>

<div class="certificate">
        <div style="text-align:right; font-size:12px; color:#555;">
            Certificate No:
            <strong>@Model.CertificateDto.CertificateNumber.ToUpper()</strong>
        </div>

    <h1>Certificate of Attendance</h1>
    <p>This certificate is proudly presented to</p>

        <div class="name">@Model.CertificateDto.StudentName</div>

    <p>for attending the activity</p>

    <div class="activity fw-bold">
            @Model.CertificateDto.ActivityTitle
    </div>

    <p class="mt-3">
        Held on <strong>@Model.CertificateDto.ActivityDate</strong>
    </p>

    <div class="footer">
        <div class="signature">
            <span>____________________</span>
                <span>@Model.CertificateDto.ManagementName</span>
        </div>

        <div class="signature">
                <span>@Model.CertificateDto.IssuedAt</span>
            <span>Date</span>
        </div>
    </div>

</div>

</body>
</html>
