@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - UniActivities</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/areas/student/student-sidebar.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="d-flex">

        <!-- Sidebar -->
        <aside class="sidebar">

            <!-- Brand -->
            <div class="sidebar-brand">
                UniActivities
                <div class="sidebar-subtitle">Student Panel</div>
            </div>

            <!-- Avatar Section -->
            @{
                var gender = User.FindFirst("gender")?.Value;
                var avatarClass = gender == "Female"
                ? "avatar-female"
                : "avatar-male";
            }

            <div class="sidebar-user text-center">
                <div class="avatar @avatarClass"></div>

                <div class="username">
                    @User.Identity?.Name
                </div>

                <div class="management">
                    Management: @(User.FindFirst("management_id")?.Value ?? "—")
                </div>
            </div>

            <!-- Menu -->
            <ul class="nav flex-column sidebar-menu">

                <li class="nav-item">
                    <a class="nav-link sidebar-link"
                       asp-area="Student"
                       asp-page="/Index">
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link sidebar-link"
                       asp-area="Student"
                       asp-page="/Profile">
                        My Profile
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link sidebar-link"
                       asp-area="Student"
                       asp-page="/MyActivities">
                        My Activities
                    </a>
                </li>

            </ul>

            <!-- Logout -->
            <div class="sidebar-footer">
                <form method="post"
                      asp-area="Auth"
                      asp-page="/Logout">
                    <button type="submit"
                            class="btn btn-outline-danger btn-sm w-100">
                        Logout
                    </button>
                </form>
            </div>

        </aside>

        <!-- Main Content -->
        <main class="content">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
