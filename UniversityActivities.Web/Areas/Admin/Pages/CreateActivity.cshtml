      const typeSelect = document.getElementById("managementTypeSelect");
    const managementSelect = document.getElementById("managementSelect");
    const clubSelect = document.getElementById("clubSelect");

    async function fillSelect(select, url, defaultText) {
        select.innerHTML = `<option value="">Loading...</option>`;
        select.disabled = true;

        const response = await fetch(url);
        const data = await response.json();

        select.innerHTML = `<option value="">${defaultText}</option>`;
        data.forEach(x => select.append(new Option(x.nameEn, x.id)));

        select.disabled = false;
    }

    // Type ➜ Management
    typeSelect.addEventListener("change", async function () {

        clubSelect.innerHTML = '<option value="">Select Club</option>';

        if (!this.value) {
            managementSelect.innerHTML = '<option value="">Select Management</option>';
            return;
        }

        await fillSelect(
            managementSelect,
            `?handler=ManagementsByType&managementTypeId=${this.value}`,
            "Select Management"
        );

        // اختار أول Management وشغّل change
        if (managementSelect.options.length > 1) {
            managementSelect.selectedIndex = 1;
            managementSelect.dispatchEvent(new Event("change"));
        }
    });

    // Management ➜ Club
    managementSelect.addEventListener("change", async function () {

        if (!this.value) {
            clubSelect.innerHTML = '<option value="">Select Club</option>';
            return;
        }

        await fillSelect(
            clubSelect,
            `?handler=ClubsByManagement&managementId=${this.value}`,
            "Select Club"
        );
    });

