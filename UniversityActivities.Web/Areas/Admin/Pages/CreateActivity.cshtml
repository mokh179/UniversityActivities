@page
@model UniversityActivities.Web.Areas.Admin.Pages.CreateActivityModel
@{
    ViewData["Title"] = "Create Activity";
}

<h4 class="fw-semibold mb-4">Create Activity</h4>

<h2>Create Activity</h2>

<form method="post">

    <!-- ================= Basic Information ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Basic Information</h6>

            <div class="row g-3">
                <div class="col-md-6">
                    <input asp-for="Input.TitleAr"
                           class="form-control"
                           placeholder="Title (Arabic)" />
                </div>

                <div class="col-md-6">
                    <input asp-for="Input.TitleEn"
                           class="form-control"
                           placeholder="Title (English)" />
                </div>

                <div class="col-md-6">
                    <textarea asp-for="Input.DescriptionAr"
                              class="form-control"
                              rows="4"
                              placeholder="Description (Arabic)"></textarea>
                </div>

                <div class="col-md-6">
                    <textarea asp-for="Input.DescriptionEn"
                              class="form-control"
                              rows="4"
                              placeholder="Description (English)"></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= Schedule ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Schedule</h6>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Start Date</label>
                    <input asp-for="Input.StartDate"
                           type="datetime-local"
                           class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">End Date</label>
                    <input asp-for="Input.EndDate"
                           type="datetime-local"
                           class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= Management ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Management</h6>

            <div class="row g-3">
                <div class="col-md-4">
                    <select id="managementTypeSelect"
                            class="form-select">
                        <option value="">Select Management Type</option>
                        @foreach (var type in Model.Lookups.ManagementTypes)
                        {
                            <option value="@type.Id">@type.NameEn</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <select asp-for="Input.ManagementId"
                            id="managementSelect"
                            class="form-select">
                        <option value="">Select Management</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <select asp-for="Input.ClubId"
                            id="clubSelect"
                            class="form-select">
                        <option value="">Select Club</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= Settings ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Settings</h6>

            <div class="row g-3">
                <div class="col-md-4">
                    <select asp-for="Input.ActivityTypeId"
                            class="form-select">
                        <option value="">Activity Type</option>
                        @foreach (var item in Model.Lookups.ActivityTypes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <select asp-for="Input.AttendanceModeId"
                            class="form-select">
                        <option value="">Attendance Mode</option>
                        @foreach (var item in Model.Lookups.ActivityTypes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <select asp-for="Input.AttendanceScopeId"
                            class="form-select">
                        <option value="">Attendance Scope</option>
                        @foreach (var item in Model.Lookups.AttendanceScopes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= Target Audience ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Target Audience</h6>

            <div class="d-flex flex-wrap gap-3">
                @foreach (var audience in Model.Lookups.TargetAudiences)
                {
                    <label class="form-check d-flex align-items-center gap-2">
                        <input type="checkbox"
                               class="form-check-input"
                               name="Input.TargetAudienceIds"
                               value="@audience.Id" />
                        @audience.NameEn
                    </label>
                }
            </div>
        </div>
    </div>

    <!-- ================= Publish ================= -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <label class="form-check d-flex align-items-center gap-2">
                <input type="checkbox"
                       class="form-check-input"
                       asp-for="Input.IsPublished" />
                Publish Activity
            </label>

            <button type="submit"
                    class="btn btn-success px-4">
                Create Activity
            </button>
        </div>
    </div>

</form>


