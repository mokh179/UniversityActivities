@page "{id:int}"
@model UniversityActivities.Web.Areas.Admin.Pages.Activities.EditActivityModel
@{
    ViewData["Title"] = "Edit Activity";
}
<link rel="stylesheet"href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    .header-card {
        background: #1f7a4d;
        border-radius: 8px;
    }
    /* ================= GENERAL ================= */
    body {
        background-color: #f5f7fa;
    }

    .card {
        border: 1px solid #e5e7eb;
        border-radius: 10px;
    }

        .card + .card {
            margin-top: 1.25rem;
        }

    .card-header {
        background-color: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
        padding: 0.85rem 1.25rem;
    }

    .card-body {
        padding: 1.25rem;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #374151;
    }

    .form-control,
    .form-select {
        font-size: 0.9rem;
        border-radius: 8px;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 0.1rem rgba(79, 70, 229, 0.15);
        }

    /* ================= HEADER ================= */
    .header-card {
        background: linear-gradient(135deg, #15803d, #166534);
        border: none;
        border-radius: 12px;
    }

        .header-card h5 {
            font-weight: 600;
        }

        .header-card small {
            font-size: 0.8rem;
        }

    /* ================= IMAGE CARD ================= */
    .card img {
        background-color: #f3f4f6;
    }

    .card input[type="file"] {
        font-size: 0.85rem;
    }

    /* ================= SECTION TITLES ================= */
    .card-header .fw-semibold {
        font-size: 0.95rem;
    }

    .card-header small {
        font-size: 0.75rem;
    }

    /* ================= MULTI SELECT ================= */
    select[multiple] {
        min-height: 110px;
    }

    /* ================= ROLES SECTION ================= */
    #supervisorsChips,
    #coordinatorsChips,
    #participantsChips {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    /* chip */
    .role-chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-color: #eef2ff;
        color: #3730a3;
        border-radius: 999px;
        padding: 4px 10px;
        font-size: 0.75rem;
        font-weight: 500;
    }

        .role-chip button {
            border: none;
            background: transparent;
            color: #6b7280;
            font-size: 0.8rem;
            cursor: pointer;
        }

            .role-chip button:hover {
                color: #dc2626;
            }

    /* ================= SWITCH ================= */
    .form-switch .form-check-input {
        width: 2.4em;
        height: 1.2em;
    }

    /* ================= BUTTONS ================= */
    .btn-light {
        font-weight: 600;
        border-radius: 8px;
    }

    .btn-success {
        border-radius: 8px;
    }

    /* ================= SPACING ================= */
    .row.mb-3 {
        margin-bottom: 1rem !important;
    }

    /* ================= ICON ================= */
    .bi {
        font-size: 1.1rem;
    }

</style>




<form method="post" id="editForm" enctype="multipart/form-data">

    <!-- ================= HEADER ================= -->
    <div class="card header-card mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1 text-white">Edit Activity</h5>
                <small class="text-white-50">
                    Update activity information and settings
                </small>
            </div>

            <button type="submit" class="btn btn-light btn-sm">
                Save Changes
            </button>
        </div>
    </div>

    <!-- ================= ACTIVITY IMAGE ================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-semibold">
            Activity Image
            <small class="text-muted d-block">
                Upload or change the activity image
            </small>
        </div>

        <div class="card-body">
            <div class="d-flex align-items-center gap-3">
                <img src="@Model.Input.ImageUrl"
                     class="rounded border"
                     style="width:120px;height:80px;object-fit:cover;" />

                <input type="file"
                       class="form-control w-50"
                       name="ImageFile" />
            </div>
        </div>
    </div>

    <!-- ================= BASIC INFORMATION ================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex align-items-center gap-2">
            <i class="bi bi-info-circle text-primary"></i>
            <div>
                <div class="fw-semibold">Basic Information</div>
                <small class="text-muted">Main activity details</small>
            </div>
        </div>

        <div class="card-body">

            <!-- Titles -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Title (English)</label>
                    <input asp-for="Input.TitleEn" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Title (Arabic)</label>
                    <input asp-for="Input.TitleAr" class="form-control" />
                </div>
            </div>

            <!-- Activity Code -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Activity Code</label>
                    <input asp-for="Input.ActivityCode" class="form-control" />
                </div>
            </div>

            <!-- Management Type -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Management Type</label>
                    <select asp-for="Input.ManagementTypeId"
                            id="managementTypeSelect"
                            class="form-select">
                        <option value="">Select management type</option>
                        @foreach (var item in Model.Lookups.ManagementTypes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Management</label>
                    <select asp-for="Input.ManagementId"
                            id="managementSelect"
                            class="form-select">
                        <option value="">Select management</option>
                    </select>
                </div>
            </div>

            <!-- Club -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Club</label>
                    <select asp-for="Input.ClubId"
                            id="clubSelect"
                            class="form-select">
                        <option value="">Select club</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Activity Type</label>
                    <select asp-for="Input.ActivityTypeId"
                            class="form-select">
                        <option value="">Select activity type</option>
                        @foreach (var item in Model.Lookups.ActivityTypes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Target Audiences -->
            <div class="mb-3">
                <label class="form-label">Target Audiences</label>
                <select asp-for="Input.TargetAudienceIds"
                        multiple
                        class="form-select">
                    @foreach (var item in Model.Lookups.TargetAudiences)
                    {
                        <option value="@item.Id">@item.NameEn</option>
                    }
                </select>
            </div>

            <!-- Description -->
            <div>
                <label class="form-label">Description</label>
                <textarea asp-for="Input.DescriptionEn"
                          rows="4"
                          class="form-control"></textarea>
            </div>

        </div>
    </div>

    <!-- ================= ATTENDANCE ================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-semibold">
            Attendance & Location
        </div>

        <div class="card-body">
            <div class="row mb-3">

                <div class="col-md-6">
                    <label class="form-label">Attendance Mode</label>
                    <select asp-for="Input.AttendanceModeId"
                            class="form-select">
                        @foreach (var item in Model.Lookups.AttendanceModes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Attendance Scope</label>
                    <select asp-for="Input.AttendanceScopeId"
                            class="form-select">
                        @foreach (var item in Model.Lookups.AttendanceScopes)
                        {
                            <option value="@item.Id">@item.NameEn</option>
                        }
                    </select>
                </div>

            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Location</label>
                    <input asp-for="Input.LocationEn" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Online Link</label>
                    <input asp-for="Input.OnlineLink" class="form-control" />
                </div>
            </div>

        </div>
    </div>

    <!-- ================= DATE & PUBLISH ================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-semibold">
            Date & Publish
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Start Date</label>
                    <input asp-for="Input.StartDate"
                           type="date"
                           class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">End Date</label>
                    <input asp-for="Input.EndDate"
                           type="date"
                           class="form-control" />
                </div>
            </div>

            <div class="form-check form-switch">
                <input asp-for="Input.IsPublished"
                       class="form-check-input"
                       type="checkbox" />
                <label class="form-check-label">
                    Publish Activity
                </label>
            </div>
        </div>
    </div>

    <!-- ================= ROLES ================= -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-semibold">
            Activity Roles
        </div>

        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-4">
                    <label class="form-label">Supervisors</label>
                    <select id="supervisorsSelect" class="form-select">
                        <option value="">Select supervisor</option>
                    </select>
                    <div class="mt-2" id="supervisorsChips"></div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Coordinators</label>
                    <select id="coordinatorsSelect" class="form-select">
                        <option value="">Select coordinator</option>
                    </select>
                    <div class="mt-2" id="coordinatorsChips"></div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Participants</label>
                    <select id="participantsSelect" class="form-select">
                        <option value="">Select participant</option>
                    </select>
                    <div class="mt-2" id="participantsChips"></div>
                </div>

            </div>
        </div>
    </div>

</form>



<script>
    const imageInput = document.getElementById("imageInput");
    const imagePreview = document.getElementById("imagePreview");

    if (imageInput) {
        imageInput.addEventListener("change", function () {
            const file = this.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = e => imagePreview.src = e.target.result;
            reader.readAsDataURL(file);
        });
        }        document.addEventListener("DOMContentLoaded", async function () {

        /* ================= ELEMENTS ================= */
        const managementTypeSelect = document.getElementById("managementTypeSelect");
        const managementSelect = document.getElementById("managementSelect");
        const clubSelect = document.getElementById("clubSelect");

        const supervisorsSelect = document.getElementById("supervisorsSelect");
        const coordinatorsSelect = document.getElementById("coordinatorsSelect");
        const participantsSelect = document.getElementById("participantsSelect");

        const supervisorsChips = document.getElementById("supervisorsChips");
        const coordinatorsChips = document.getElementById("coordinatorsChips");
        const participantsChips = document.getElementById("participantsChips");

        /* ================= DATA FROM SERVER ================= */
        const existingAssignments = @Html.Raw(
                        System.Text.Json.JsonSerializer.Serialize(Model.Input.Assignments)
                );

        const usersMap = new Map();

        /* ================= PRELOADED VALUES ================= */
        const selectedManagementTypeId = managementTypeSelect?.value;
        const selectedManagementId = "@Model.Input.ManagementId";
        const selectedClubId = "@Model.Input.ClubId";

        /* ================= INITIAL LOAD ================= */
        if (selectedManagementTypeId) {
            await loadManagements(selectedManagementTypeId);

            if (selectedManagementId) {
                managementSelect.value = selectedManagementId;
                await loadClubsAndUsers(selectedManagementId);

                if (selectedClubId) {
                    clubSelect.value = selectedClubId;
                }
            }
        }
    console.log("Assignments:", existingAssignments);
    console.log("Chips supervisors:", supervisorsChips.children.length);
        /* ================= EVENTS ================= */
        managementTypeSelect?.addEventListener("change", async function () {
            resetAll();
            if (!this.value) return;
            await loadManagements(this.value);
        });

        managementSelect?.addEventListener("change", async function () {
            resetAfterManagement();
            if (!this.value) return;
            await loadClubsAndUsers(this.value);
        });

        supervisorsSelect?.addEventListener("change", () =>
            handleRoleSelect(supervisorsSelect, supervisorsChips, 1)
        );

        coordinatorsSelect?.addEventListener("change", () =>
            handleRoleSelect(coordinatorsSelect, coordinatorsChips, 2)
        );

        participantsSelect?.addEventListener("change", () =>
            handleRoleSelect(participantsSelect, participantsChips, 3)
        );

        /* ================= LOADERS ================= */
        async function loadManagements(typeId) {
            resetSelect(managementSelect, "Select management");

            const res = await fetch(
                `?handler=ManagementsByType&managementTypeId=${typeId}`
            );
            const data = await res.json();

            data.forEach(m =>
                managementSelect.add(new Option(m.nameEn, m.id))
            );
        }

        async function loadClubsAndUsers(managementId) {

            // ---------- Clubs ----------
            resetSelect(clubSelect, "Select club");
            const clubsRes = await fetch(
                `?handler=ClubsByManagement&managementId=${managementId}`
            );
            const clubs = await clubsRes.json();
            clubs.forEach(c =>
                clubSelect.add(new Option(c.nameEn, c.id))
            );

            // ---------- Users ----------
            resetUsers();
            usersMap.clear();

            const usersRes = await fetch(
                `?handler=UsersByManagement&managementId=${managementId}&role=all`
            );
            const users = await usersRes.json();

            users.forEach(u => {
                usersMap.set(u.id, u.name);

                supervisorsSelect.add(new Option(u.name, u.id));
                coordinatorsSelect.add(new Option(u.name, u.id));
                participantsSelect.add(new Option(u.name, u.id));
            });

            preloadAssignments();
        }

        /* ================= PRELOAD ASSIGNMENTS ================= */
        function preloadAssignments() {

                //  supervisorsChips.innerHTML = "";
                // coordinatorsChips.innerHTML = "";
                // participantsChips.innerHTML = "";

                if (!existingAssignments || existingAssignments.length === 0) return;

                existingAssignments.forEach(a => {

                    const userId = a.UserId;
                    const roleId = a.ActivityRoleId;

                    const userName = usersMap.get(userId);
                    if (!userName) return;

                    let container = null;
                    if (roleId === 1) container = supervisorsChips;
                    if (roleId === 2) container = coordinatorsChips;
                    if (roleId === 3) container = participantsChips;

                    if (!container) return;

                    addChip(container, userId, userName, roleId);
    });
        }

        /* ================= ROLES & CHIPS ================= */
        function handleRoleSelect(select, container, roleId) {
            const userId = select.value;
            if (!userId) return;

            if (container.querySelector(`[data-user-id="${userId}"]`)) {
                select.value = "";
                return;
            }

            const userName = select.options[select.selectedIndex].text;
            addChip(container, userId, userName, roleId);
            select.value = "";
        }

        function addChip(container, userId, name, roleId) {
            const chip = document.createElement("div");
            chip.className = "role-chip";
            chip.dataset.userId = userId;
            chip.dataset.roleId = roleId;

            chip.innerHTML = `
                <span>${name}</span>
                <button type="button">&times;</button>
                <input type="hidden" name="Input.Assignments[].UserId" value="${userId}" />
                <input type="hidden" name="Input.Assignments[].ActivityRoleId" value="${roleId}" />
            `;

            chip.querySelector("button")
                .addEventListener("click", () => chip.remove());

            container.appendChild(chip);
        }

        /* ================= HELPERS ================= */
        function resetSelect(select, placeholder) {
            if (!select) return;
            select.innerHTML = "";
            select.add(new Option(placeholder, ""));
        }

        function resetUsers() {
            resetSelect(supervisorsSelect, "Select supervisor");
            resetSelect(coordinatorsSelect, "Select coordinator");
            resetSelect(participantsSelect, "Select participant");

            // supervisorsChips.innerHTML = "";
            // coordinatorsChips.innerHTML = "";
            // participantsChips.innerHTML = "";
        }

        function resetAfterManagement() {
            resetSelect(clubSelect, "Select club");
            resetUsers();
        }

        function resetAll() {
            resetSelect(managementSelect, "Select management");
            resetAfterManagement();
        }

    });
</script>