<!-- Basic Information Section -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">

        <!-- Section Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div class="d-flex align-items-start gap-3">
