<style>

    .section-dot {
        width: 14px;
        height: 14px;
        background-color: #dff2e6;
        border-radius: 50%;
        margin-top: 4px;
        flex-shrink: 0;
    }

    .upload-badge {
        width: 40px;
        height: 40px;
        background-color: #e9f6ef;
        color: #198754;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .upload-area {
        border: 2px dashed #d0d7de;
        border-radius: 12px;
        padding: 40px;
        min-height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .img-preview {
        max-height: 220px;
        max-width: 100%;
        object-fit: contain;
        border-radius: 10px;
    }

    .beneficiary-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        padding: 10px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        background-color: #fff;
    }

    .beneficiary-pill {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

        .beneficiary-pill input {
            display: none;
        }

        .beneficiary-pill span {
            padding: 6px 14px;
            border-radius: 20px;
            border: 1px solid #ced4da;
            font-size: 14px;
            background-color: #f8f9fa;
            transition: all 0.2s ease;
        }

        .beneficiary-pill input:checked + span {
            background-color: #198754;
            color: #fff;
            border-color: #198754;
        }

    .chip-select {
        position: relative;
    }

    .chip-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        max-height: 180px;
        overflow-y: auto;
        z-index: 10;
        display: none;
    }

    .chip-item {
        padding: 8px 12px;
        cursor: pointer;
    }

        .chip-item:hover {
            background-color: #f8f9fa;
        }

    .chips-container {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 6px;
    }

    .chip {
        background-color: #198754;
        color: #fff;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .chip span {
            cursor: pointer;
        }


</style>

