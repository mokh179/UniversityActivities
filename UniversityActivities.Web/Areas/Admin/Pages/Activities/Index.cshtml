            const participantId = p.id;

            list.innerHTML += `
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-semibold">${fullName}</div>
                        <div class="text-muted small">${userName}</div>
                    </div>
                </li>`;
        });
    }
</script>


