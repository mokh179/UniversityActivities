         $(document).ready(function () {
        const tableElement = document.getElementById('dataTable');
        if (!tableElement) return;

        const table = $('#dataTable').DataTable({
            responsive: {
                details: {
                    type: 'column',
                    target: 0
                }
            },
            dom: "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
