@model UniversityActivities.Web.Areas.Admin.Pages.Activities.IndexModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .stat-card {
        border-radius: 10px;
        padding: 20px;
        color: #fff;
        height: 110px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .stat-title {
        font-size: 13px;
        opacity: .9;
    }

    .stat-number {
        font-size: 26px;
        font-weight: bold;
    }

    .stat-sub {
        font-size: 12px;
        opacity: .8;
    }

    .bg-blue {
        background: #4e73df;
    }

    .bg-green {
        background: #1cc88a;
    }

    .bg-orange {
        background: #f6c23e;
    }

    .bg-red {
        background: #e74a3b;
    }

    .btn-success {
        transition: all .2s ease-in-out;
    }

        .btn-success:hover {
            transform: translateY(-1px);
        }
</style>

<div class="container mt-4">
   
    <div class="row g-3">

        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-blue">
                <div class="stat-title">Total Activities</div>
                <div class="stat-number">@Model.adminStatistics.TotalActivities</div>
                </div>

          
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-green">
                <div class="stat-title">Upcoming Activities</div>
                <div class="stat-number">@Model.adminStatistics.UpcomingActivities</div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-orange">
                <div class="stat-title">InProgress Activities</div>
                <div class="stat-number">@Model.adminStatistics.InProgressActivities</div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-red">
                <div class="stat-title">Completed Activities</div>
                <div class="stat-number">@Model.adminStatistics.CompletedActivities</div>
            </div>
        </div>

    </div>
    <br />
<div class="d-flex justify-content-end mb-3">
    <a href="/Admin/Activities/AddActivity"
       class="btn btn-success d-flex align-items-center gap-2 shadow-sm">
        <i class="bi bi-plus-circle"></i>
        <span>Add New Activity</span>
    </a>
</div>
</div>
<div class="container mt-4">

    <!-- Header -->
    <div class="bg-success text-white rounded-3 p-3 mb-4 d-flex justify-content-between align-items-center">
        <div class="fw-bold">
            Search & Advanced Filters
        </div>
        <button class="btn btn-outline-light btn-sm">
            <i class="bi bi-funnel"></i>
        </button>
    </div>

    <!-- Filters Card -->
    <div class="card shadow-sm">
        <form id="searchForm" class="card shadow-sm mb-4" onsubmit="return false;">
            <div class="card-body">

                <div class="row g-3">

                    <!-- Title -->
                    <div class="col-md-3">
                        <label class="form-label">Title</label>
                        <input type="text" name="Title" class="form-control" />
                    </div>

                    <!-- Status (STATIC) -->
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select">
                            <option value="">All Status</option>
                            <option value="1">Draft</option>
                            <option value="2">Published</option>
                            <option value="3">Cancelled</option>
                        </select>
                    </div>

                    <!-- Activity Type (DB) -->
                    <div class="col-md-3">
                        <label class="form-label">Activity Type</label>
                        <select name="ActivityTypeId" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var t in Model.Lookups.ActivityTypes)
                            {
                                <option value="@t.Id">@t.NameEn</option>
                            }
                        </select>
                    </div>

                    <!-- Management Type (DB) -->
                    <div class="col-md-3">
                        <label class="form-label">Management Type</label>
                        <select name="ManagementTypeId" id="managementtypeSelect" class="form-select" onchange="loadManagements()">
                            <option value="">All Types</option>
                            @foreach (var t in Model.Lookups.ManagementTypes)
                            {
                                <option value="@t.Id">@t.NameEn</option>
                            }
                        </select>
                    </div>

                    <!-- Management -->
                    <div class="col-md-3  d-none" id="managementContainer">
                        <label class="form-label">Management</label>
                        <select name="ManagementId"
                                id="managementSelect"
                                class="form-select"
                                onchange="loadClubs()">
                            <option value="">All Managements</option>
                        </select>
                    </div>

                    <!-- Club (depends on Management) -->
                    <div class="col-md-3 d-none" id="clubContainer">
                        <label class="form-label">Club</label>
                        <select name="ClubId"
                                id="clubSelect"
                                class="form-select">
                            <option value="">All Clubs</option>
                        </select>
                    </div>

                    <!-- Date From -->
                    <div class="col-md-3">
                        <label class="form-label">Start Date From</label>
                        <input type="date" name="StartDateFrom" class="form-control" />
                    </div>

                    <!-- Date To -->
                    <div class="col-md-3">
                        <label class="form-label">Start Date To</label>
                        <input type="date" name="StartDateTo" class="form-control" />
                    </div>

                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between align-items-center mt-4">

                    <button class="btn btn-danger" onclick="clearAllFilters()">
                        Clear All
                    </button>

                    <button class="btn btn-success px-4" type="button" onclick="searchActivities(1, this.form)">
                        Search
                    </button>

                </div>

            </div>

        </form>


</div>
<div class="container mt-4">

    <!-- Table Header -->
    <div class="bg-success text-white rounded-3 p-3 mb-3 d-flex justify-content-between align-items-center">
        <div class="fw-bold">
            Activities List
        </div>
        <span class="badge bg-light text-success">
            Total: 57
        </span>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

                <table class="table table-hover mb-0 align-middle" id="activitiesTable">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Activity Name</th>
                        <th>Organization</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                    <tbody id="activitiesTableBody">

                    @foreach (var item in Model.Result.Items.Select((v, i) => new { v, i }))
                    {
                        <tr>
                            <td>@((Model.PageNumber - 1) * Model.Result.PageSize + item.i + 1)</td>
                            <td>@item.v.TitleEn</td>
                            <td>@item.v.ManagementNameEn</td>
                            <td>
                                <span class="badge bg-success">@item.v.status</span>
                            </td>
                            <td>@item.v.StartDate.ToString("yyyy-MM-dd")</td>

                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">

                                        <!-- View -->
                                        <a href="/Admin/Activities/EditActivity/@item.v.Id"
                                           class="btn btn-sm btn-outline-success"
                                           onclick="return viewActivity(event, @item.v.Id)">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <!-- Edit -->
                                        <a href="/Admin/Activities/EditActivity/@item.v.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           >
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <!-- Participants -->
                                        <a href="?handler=participants&activityId=@item.v.Id"
                                           class="btn btn-sm btn-outline-info"
                                           onclick="return loadParticipants(event, @item.v.Id)">
                                            <i class="bi bi-people"></i>
                                        </a>

                                        <!-- Approve -->
                                        <a href="?handler=Approve&id=@item.v.Id"
                                           class="btn btn-sm btn-outline-warning"
                                           onclick="return approveActivity(event, @item.v.Id)">
                                            <i class="bi bi-check-circle"></i>
                                        </a>

                                        <!-- Delete -->
                                        <a href="?handler=Delete&id=@@item.v.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return deleteActivity(event, @item.v.Id)">
                                            <i class="bi bi-trash"></i>
                                        </a>

                                    </div>
                                </td>

                        </tr>
                    }

                    @if (!Model.Result.Items.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No data found
                            </td>
                        </tr>
                    }

                </tbody>
            </table>


        </div>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-3">

        <div class="text-muted">
            Showing
            @(((Model.PageNumber - 1) * Model.Result.PageSize) + 1)
            to
            @(Math.Min(Model.PageNumber * Model.Result.PageSize, Model.Result.TotalCount))
            of
            @Model.Result.TotalCount
            entries
        </div>

        <nav>
            <ul class="pagination mb-0">

                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-PageNumber="@(Model.PageNumber - 1)">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.Result.TotalCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link @(i == Model.PageNumber ? "bg-success border-success" : "text-success")"
                           asp-route-PageNumber="@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.Result.TotalCount ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-PageNumber="@(Model.PageNumber + 1)">
                        Next
                    </a>
                </li>

            </ul>
        </nav>

    </div>

</div>


    <div class="modal fade" id="participantsModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">

                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Activity Participants - مشرفين النشاط</h5>
                    <button type="button" class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- Coordinators -->
                    <div class="mb-4">
                        <h6 class="text-success fw-bold">Coordinators/الملاحظين</h6>
                        <ul class="list-group" id="coordinatorsList"></ul>
                    </div>

                    <!-- Supervisors -->
                    <div class="mb-4">
                        <h6 class="text-success fw-bold">Supervisors/المشرفين</h6>
                        <ul class="list-group" id="supervisorsList"></ul>
                    </div>

                    <!-- Viewers -->
                    <div>
                        <h6 class="text-success fw-bold">Viewers/المشاهدين</h6>
                        <ul class="list-group" id="viewersList"></ul>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Close
                    </button>
                </div>

            </div>
        </div>
    </div>


