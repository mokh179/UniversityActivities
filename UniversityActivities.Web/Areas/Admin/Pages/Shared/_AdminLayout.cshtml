@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin | UniActivities</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/areas/admin/admin-sidebar.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="d-flex">

        <!-- Sidebar -->
        <aside class="admin-sidebar">

            <!-- Brand -->
            <div class="admin-brand">
                UniActivities
                <div class="admin-subtitle">Admin Panel</div>
            </div>

            <!-- Admin Info -->
            <div class="admin-user text-center">
                <div class="admin-avatar">A</div>
                <div class="fw-semibold mt-2">
                    @User.Identity?.Name
                </div>
                <div class="text-muted small">
                    Administrator
                </div>
            </div>

            <!-- Menu -->
            <ul class="nav flex-column admin-menu">

                <li class="nav-item">
                    <a class="nav-link admin-link"
                       asp-area="Admin"
                       asp-page="/Index">
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link admin-link"
                       asp-area="Admin"
                       asp-page="/Activities/Index">
                        Activities
                    </a>
                </li>

            </ul>

            <!-- Logout -->
            <div class="admin-footer">
                <form method="post"
                      asp-area="Auth"
                      asp-page="/Logout">
                    <button type="submit"
                            class="btn btn-outline-danger btn-sm w-100">
                        Logout
                    </button>
                </form>
            </div>

        </aside>

        <!-- Content -->
        <main class="admin-content">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
